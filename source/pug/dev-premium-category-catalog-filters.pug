extends layout/layout

block variables
  - var title = 'Комоды и тумбы'
  - var pageClass = 'premium-category-page'

prepend styles
  link(rel='stylesheet' href='vendor/swiper/swiper-bundle.min.css')

block content
  +centered-breadcrumbs([
    { text: 'Premium', href: 'premium-catalog.html' },
    { text: 'Комоды и тумбы' },
  ])
  +page-premium-heading('Комоды и тумбы Premium-класса')
  +premium-navigation
  +navigation-shortcuts
  +catalog
  +products('Вы смотрели', products)
  +subscription-with-image

append modals
  +modal(class='modal--with_catalog-filters modal--open')
    +catalog-filters(class='modal__catalog-filters')

prepend scripts
  script(src='vendor/swiper/swiper-bundle.min.js')
