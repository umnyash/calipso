extends layout/layout

block variables
  - var title = 'Калипсо'
  - var pageClass = 'index-page'
  - var isHeaderTransparent = true
  - var isAuthorized = true

block content
  +banners(banners)
  +navigation-tabs
  +ideas
  +premium-brands
  +selection
  +appointment
  +products('Акционные товары со скидкой', products, 'l')
  +advantages-cards
  +terms-with-image(terms.fish)
  +articles(articles)
  +subscription-with-image
  +map-marker-template(true)

append modals
  +modal(class='modal--with_cities')
    +cities(cities, true)(class='modal__cities')
  +modal(class='modal--with_search')
    +search-modal(true)(class='modal__search')
  +modal(class='modal--with_alert modal--open')
    +alert(
      'Заявка успешно отправлена',
      'Наш менеджер свяжется с вами',
      'Закрыть'
    )(class='modal__alert')
