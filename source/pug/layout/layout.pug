block variables

include ../data/articles
include ../data/banners
include ../data/brands
include ../data/cities
include ../data/contacts
include ../data/orders
include ../data/products
include ../data/reviews
include ../data/rooms
include ../data/styles
include ../data/video-reviews

include ../components/components

doctype html
html.page(class= pageClass lang='ru')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='preload' href='fonts/cyrillic.woff2' as='font' type='font/woff2' crossorigin)
    link(rel='preload' href='fonts/latin.woff2' as='font' type='font/woff2' crossorigin)
    link(rel='preload' href='fonts/latin-ext.woff2' as='font' type='font/woff2' crossorigin)
    block styles
      link(rel='stylesheet' href='css/style.min.css')
    script(src='https://api-maps.yandex.ru/v3/?apikey=e6c045b8-c60b-415c-82d4-b4adf6e237da&lang=ru_RU')
    title= title
    meta(name='description' content='Интерьерный салон «Калипсо» — богатый выбор и безупречное качество.')
    meta(name='keywords' content='Калипсо, интерьер, мебель.')
  body.page__body
    .page__inner
      +site-header(class='page__site-header')
      main.page__content
        block content
      if pageClass !== 'cart-page'
        +site-footer
    block modals
    block scripts
      script(src='js/script.min.js')
