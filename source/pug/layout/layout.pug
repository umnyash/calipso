block variables

include ../data/articles
include ../data/banners

include ../components/components

doctype html
html.page(class= pageClass lang='ru')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='preload' href='fonts/mulish-400.woff2' as='font' type='font/woff2' crossorigin)
    link(rel='preload' href='fonts/mulish-500.woff2' as='font' type='font/woff2' crossorigin)
    link(rel='preload' href='fonts/mulish-600.woff2' as='font' type='font/woff2' crossorigin)
    block styles
      link(rel='stylesheet' href='css/style.min.css')
    //- script(src='https://api-maps.yandex.ru/2.1/?apikey=e6c045b8-c60b-415c-82d4-b4adf6e237da&lang=ru_RU')
    script(src='https://api-maps.yandex.ru/v3/?apikey=e6c045b8-c60b-415c-82d4-b4adf6e237da&lang=ru_RU')
    title= title
    meta(name='description' content='Интерьерный салон «Калипсо» — богатый выбор и безупречное качество.')
    meta(name='keywords' content='Калипсо, интерьер, мебель.')
  body.page__body
    .page__inner
      +site-header(class='page__site-header')
      main.page__content
        block content
      +site-footer(class='page__site-footer')
    block modals
    block scripts
      script(src='js/script.min.js')
