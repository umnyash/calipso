extends layout/layout

block variables
  - var title = 'Личный кабинет'
  - var pageClass = 'account-page'

prepend styles
  link(rel='stylesheet' href='vendor/swiper/swiper-bundle.min.css')
  link(rel='stylesheet' href='vendor/air-datepicker/air-datepicker.css')

block content
  +centered-breadcrumbs([
      { text: 'Личный кабинет' },
    ])
  +account

append modals
  +modal(class='modal--with_form')
    +phone-modal-form(class='modal__form')
  +modal(class='modal--with_alert')
    +alert(
      'Телефон успешно изменен',
      false,
      'Принять'
    )(class='modal__alert')
  +modal(class='modal--with_form')
    +code-modal-form(true)(class='modal__form')

prepend scripts
  script(src='vendor/swiper/swiper-bundle.min.js')
  script(src='vendor/air-datepicker/air-datepicker.js')
