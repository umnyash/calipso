extends layout/layout

block variables
  - var title = 'Комоды и тумбы'
  - var pageClass = 'premium-category-page'

block content
  +centered-breadcrumbs([
    { text: 'Premium', href: 'premium-catalog.html' },
    { text: 'Комоды и тумбы' },
  ])
  +page-premium-heading('Комоды и тумбы Premium-класса')
  +premium-navigation
  +navigation-shortcuts
  +catalog('Каталог', true, true)(class='catalog--bordered')
  +products('Вы смотрели', products)
  +subscription-with-image

append modals
  +modal(class='modal--with_catalog-filters modal--hidden' data-modal='catalog-filters')
    +catalog-filters(class='modal__catalog-filters')
