extends layout/layout

block variables
  - var title = 'Комоды и тумбы'
  - var pageClass = 'category-page'

block content
  +centered-breadcrumbs([
    { text: 'Комоды и тумбы' },
  ])
  +page-heading('Комоды и тумбы')
  +navigation-shortcuts
  +catalog('Каталог', true, true)(class='catalog--bordered')
  +products('Вы смотрели', products)
  +subscription-with-image

append modals
  +modal(class='modal--with_catalog-filters' data-modal='catalog-filters')
    +catalog-filters(class='modal__catalog-filters')
