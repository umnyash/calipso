mixin textarea(label, name, text, placeholder, isRequired, isReadonly, isDisabled, maxLength)
  .textarea&attributes(attributes)
    label.textarea__inner
      span.visually-hidden= label
      textarea.textarea__control(name= name, placeholder= placeholder, required= isRequired ? true : false, readonly= isReadonly ? true : false, disabled= isDisabled ? true : false, maxlength= maxLength ? maxLength : false)= text
    block
