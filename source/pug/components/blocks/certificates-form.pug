mixin certificates-form
  -
    var buttons = [
      {
        label: '5 000 руб.',
        name: 'denomination',
        value: '5000',
      },
      {
        label: '10 000 руб.',
        name: 'denomination',
        value: '10000',
      },
      {
        label: '25 000 руб.',
        name: 'denomination',
        value: '25000',
        isChecked: true,
      },
      {
        label: '50 000 руб.',
        name: 'denomination',
        value: '50000',
      },
    ];

  form.certificates-form(action='https://echo.htmlacademy.ru' method='post' target='_blank')&attributes(attributes)
    h2.certificates-form__heading.heading Выберите карту
    fieldset.certificates-form__section
      each button in buttons
        +radiobutton(button)
    +button('button', 'Купить', 'submit')(class='button--primary certificates-form__submit-button')
