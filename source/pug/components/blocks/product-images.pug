mixin product-images
  a.product-images(href='#' data-modal-opener='product-gallery')&attributes(attributes)
    .product-images__slider
      ul.product-images__slider-list
        li.product-images__slider-item
          picture.product-images__image-wrapper
            source(media='(min-width: 500px)' srcset='img/products/product-4-1-big.webp 1x, img/products/product-4-1-big.webp 2x')
            img.product-images__image(src='img/products/product-4-1.webp' srcset='img/products/product-4-1.webp 2x' alt='' loading='lazy')
        li.product-images__slider-item
          picture.product-images__image-wrapper
            source(media='(min-width: 500px)' srcset='img/products/product-4-2-big.webp 1x, img/products/product-4-2-big.webp 2x')
            img.product-images__image(src='img/products/product-4-2.webp' srcset='img/products/product-4-2.webp 2x' alt='' loading='lazy')
        li.product-images__slider-item
          picture.product-images__image-wrapper
