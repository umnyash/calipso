mixin text-field(label, name, type, value, placeholder, isRequired, isReadonly, isDisabled)
  .text-field&attributes(attributes)
    label.text-field__inner
      span.visually-hidden= label
      span.text-field__control-wrapper
        input.text-field__control(name= name, type= type, value= value ? value : false, placeholder= placeholder, required= isRequired ? true : false, readonly= isReadonly ? true : false, disabled= isDisabled ? true : false)
        if type === 'email'
          button.text-field__clear-button(type='button')
            span.visually-hidden Очистить
    block
