mixin pagination(withPrevButton)
  ol.pagination&attributes(attributes)
    if withPrevButton
      li.pagination__item.pagination__item--prev
        a.pagination__link.pagination__link--prev(href='#!')
          span.visually-hidden Назад
      li.pagination__item
        a.pagination__link(href='#!') 01
      li.pagination__item
        a.pagination__link.pagination__link--current 02
    else
      li.pagination__item
        a.pagination__link.pagination__link--current 01
      li.pagination__item
        a.pagination__link(href='#!') 02
    li.pagination__item
      a.pagination__link(href='#!') 03
    if !withPrevButton
      li.pagination__item
        a.pagination__link(href='#!') 04
    li.pagination__item
      span.pagination__link ...
    li.pagination__item
      a.pagination__link(href='#!') 10
    li.pagination__item.pagination__item--next
      a.pagination__link.pagination__link--next(href='#!')
        span.visually-hidden Вперёд
