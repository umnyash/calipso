mixin product-gallery
  .product-gallery&attributes(attributes)
    .product-gallery__inner
      .product-gallery__slider
        +slider-arrows(class='product-gallery__slider-arrows slider-arrows--with-background')
        .product-gallery__slider-wrapper.swiper
          ul.product-gallery__slider-list.swiper-wrapper
            li.product-gallery__slider-item.swiper-slide
              picture.product-gallery__image-wrapper
                source(media='(min-width: 500px)' srcset='img/products/product-4-1-big.webp 1x, img/products/product-4-1-big.webp 2x')
                img.product-gallery__image(src='img/products/product-4-1.webp' srcset='img/products/product-4-1.webp 2x' alt='' loading='lazy')
            li.product-gallery__slider-item.swiper-slide
              picture.product-gallery__image-wrapper
                source(media='(min-width: 500px)' srcset='img/products/product-4-2-big.webp 1x, img/products/product-4-2-big.webp 2x')
                img.product-gallery__image(src='img/products/product-4-2.webp' srcset='img/products/product-4-2.webp 2x' alt='' loading='lazy')
            li.product-gallery__slider-item.swiper-slide
              picture.product-gallery__image-wrapper
