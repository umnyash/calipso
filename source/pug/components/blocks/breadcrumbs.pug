mixin breadcrumbs(links, isAlter)
  ol.breadcrumbs(class= isAlter ? 'breadcrumbs--alter' : '')&attributes(attributes)
    li.breadcrumbs__item
      a.breadcrumbs__link.breadcrumbs__link--home(href='index.html') Главная
    each link in links
      li.breadcrumbs__item
        a.breadcrumbs__link(href= link.href)= link.text
