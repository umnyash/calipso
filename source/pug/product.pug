extends layout/layout

block variables
  - var title = 'Продукт'
  - var pageClass = 'product-page'

block content
  +centered-breadcrumbs([
      { text: 'Premium', href: 'premium-catalog.html' },
      { text: 'Комоды и тумбы', href: 'premium-category.html' },
      { text: 'Комод Chill' },
    ])
  +product({status: 'arrival-expected', isPremium: true})
  +products('С этим товаром покупают', products, 'l')
  +products('Похожие товары', products, 'l')
  +products('Вы смотрели', products)
  +features

append modals
  +modal(class='modal--with_form modal--hidden' data-modal='one-click')
    +one-click-modal-form(class='modal__form')
  +modal(class='modal--with_form modal--hidden' data-modal='installment-request')
    +installment-request-modal-form(class='modal__form')
  +modal(class='modal--with_form modal--hidden' data-modal='product-question')
    +product-question-modal-form(class='modal__form')
  +modal(class='modal--with_gallery modal--with_product-gallery modal--hidden')
    +gallery(productGallery.concat(productGallery))(class='modal__gallery')
  +modal(class='modal--with_cart modal--hidden')
    +cart-modal(class='modal__cart')
  +modal(class='modal--with_document modal--hidden' data-modal='delivery-document')
    +delivery-document-modal(class='modal__document')
  +modal(class='modal--with_document modal--hidden' data-modal='guarantee-document')
    +guarantee-document-modal(class='modal__document')
  +modal(class='modal--with_video modal--hidden' data-modal='video')
    +video()(class='modal__video video--not-rounded')
